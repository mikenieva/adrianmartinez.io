{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}
{{! The main content area on the homepage }}
    {{! The tag below includes the post loop - partials/loop.hbs }}
    {{#post}}
    {{#contentFor "meta"}}
    <meta property="og:title" content="{{title}} - Mike Nieva" />
    <meta property="og:site_name" content="{{@blog.title}}" />
    <meta property="og:description" content="{{excerpt characters="220"}}..."/>
    <meta property="og:image" content="{{@blog.url}}{{image}}">
    <meta property="article:author" content="https://www.facebook.com/adrianmrtnz.f" />
    <meta property="article:published_time" content="{{date format="YYYY-MM-DD"}}" />{{#foreach tags}}
    <meta property="article:tag" content="{{name}}" />{{/foreach}}
    <meta property="fb:profile_id" content="adrianmrtnz.f" />
    <meta property="fb:admins" content="adrianmrtnz.f" />
    {{/contentFor}}

    <article class="{{post_class}}">
        {{#if image}}
 <img class="image-featured" src="{{image}}" alt="" />
 {{/if}}
  <!-- <time class="entry-date" datetime="{{date published_at timeago="true"}}"><h2>{{date published_at timeago="true"}}</h2></time> -->
  <div class="fb-share-button" data-href="{{url absolute="true"}}" data-layout="button_count">
  </div>
  <br>
  <br>
<h1>{{title}}</h1>
                           
                           {{content}}
<div class="fb-share-button" data-href="{{url absolute="true"}}" data-layout="button_count"></div>
<br>
<br>
<div class="fb-comments" data-href="{{url absolute="true"}}" data-numposts="100" data-width="100%"></div>
</article>
{{/post}}

